; https://editorconfig.org/
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab
indent_size = 4

[{*.markdown,*.md}]
indent_style = tab

[{*.yaml,*.yml,*.nix}]
indent_style = space
indent_size = 2
insert_final_newline = true